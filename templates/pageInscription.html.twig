{% extends 'base_template.html.twig' %}
{% block title %} Page de connexion {% endblock %}
{% block content %}
    <div class="container">
        <h1 class="text-center mb-4">S'inscrire</h1>
        <form action="index.php?controleur=utilisateur&methode=inscription" method="POST" class="mx-auto p-4" style="max-width: 400px; border: 1.5px solid #4B352A; border-radius: 8px;">
            <div class="mb-3">
                <label for="text" class="form-label">Nom :</label>
                <input type="text" name="nom" id="nom" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Prenom :</label>
                <input type="text" name="prenom" id="prenom" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="date" class="form-label">Date de naissance :</label>
                <input type="date" name="datenaiss" id="datenaiss" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Téléphone :</label>
                <input type="text" name="phone" id="phone" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="select" class="form-label">Role :</label>
                <select name="role" id="role" class="form-control" required>
                    <option value="" selected disabled>-- Choisissez une option --</option>
                    <option>Particulier</option>
                    <option>Etudiant</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Code INE :</label>
                <input type="text" name="codeINE" id="codeINE" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Ville :</label>
                <input type="text" name="codeINE" id="codeINE" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Adresse :</label>
                <input type="text" name="codeINE" id="codeINE" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="text" class="form-label">Code postale :</label>
                <input type="text" name="codeINE" id="codeINE" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email :</label>
                <input type="email" name="email" id="email" class="form-control" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Mot de passe :</label>
                <input type="password" name="password" id="password" class="form-control" required>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-outline-success my-2 my-sm-0">S'inscrire</button>
            </div>
        </form>
    </div>
{% endblock %}
